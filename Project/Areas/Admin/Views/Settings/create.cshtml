@model SettingsCreateViewModel
<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-6 col-xxl-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Settings Category</h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-form">
                            <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="HeaderLogo" class="text-dark h5">Header Logo</label>
                                    <input asp-for="HeaderLogo" class="form-control" accept="image/*">
                                    <span asp-validation-for="HeaderLogo" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FooterLogo" class="text-dark h5">Footer Logo</label>
                                    <input asp-for="FooterLogo" class="form-control input-default" accept="image/*">
                                    <span asp-validation-for="FooterLogo" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FooterDescription" class="text-dark h5">Footer Description</label>
                                    <input asp-for="FooterDescription" class="form-control input-default" placeholder="FooterDescription..">
                                    <span asp-validation-for="FooterDescription" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Facebook" class="text-dark h5">Facebook</label>
                                    <input asp-for="Facebook" class="form-control input-default" placeholder="Facebook..">
                                    <span asp-validation-for="Facebook" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Twitter" class="text-dark h5">Twitter</label>
                                    <input asp-for="Twitter" class="form-control input-default" placeholder="Twitter..">
                                    <span asp-validation-for="Twitter" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Viber" class="text-dark h5">Viber</label>
                                    <input asp-for="Viber" class="form-control input-default" placeholder="Viber..">
                                    <span asp-validation-for="Viber" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Pinterest" class="text-dark h5">Pinterest</label>
                                    <input asp-for="Pinterest" class="form-control input-default" placeholder="Pinterest..">
                                    <span asp-validation-for="Pinterest" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Adress" class="text-dark h5">Adress</label>
                                    <input asp-for="Adress" class="form-control input-default" placeholder="Adress..">
                                    <span asp-validation-for="Adress" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PhoneNumber" class="text-dark h5">PhoneNumber</label>
                                    <input asp-for="PhoneNumber" class="form-control input-default" placeholder="PhoneNumber..">
                                    <span asp-validation-for="PhoneNumber" class="text-danger font-weight-bold"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="PhoneNumberSecond" class="text-dark h5">PhoneNumberSecond</label>
                                    <input asp-for="PhoneNumberSecond" class="form-control input-default" placeholder="PhoneNumberSecond..">
                                    <span asp-validation-for="PhoneNumberSecond" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email" class="text-dark h5">Email</label>
                                    <input asp-for="Email" class="form-control input-default" placeholder="Email..">
                                    <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="EmailSecond" class="text-dark h5">EmailSecond</label>
                                    <input asp-for="EmailSecond" class="form-control input-default" placeholder="EmailSecond..">
                                    <span asp-validation-for="EmailSecond" class="text-danger font-weight-bold"></span>
                                </div>

                                <button type="submit" class="btn-secondary btn-lg px-4">Submit</button>
                                <button class="btn-dark btn-lg px-4" asp-action="Index">Cancel</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

