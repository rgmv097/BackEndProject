@using Project.Areas.Admin.Models;
@model TeacherUpdateViewModel
<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-6 col-xxl-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Update Teacher</h4>
                    </div>
                    <div class="card-body">
                        <img src="~/img/teacher/@Model.ImageUrl" style="width:150px;height:150px;" />
                        <div class="basic-form">
                            <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger font-weight-bold"></div>
                                <div class="form-group">
                                    <label asp-for="Fullname" class="text-dark h5">Fullname</label>
                                    <input asp-for="Fullname" class="form-control input-default" placeholder="FullName..">
                                    <span asp-validation-for="Fullname" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Profession" class="text-dark h5">Profession</label>
                                    <input asp-for="Profession" class="form-control input-default" placeholder="Profession..">
                                    <span asp-validation-for="Profession" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="About" class="text-dark h5">About</label>
                                    <input asp-for="About" class="form-control input-default" placeholder="About..">
                                    <span asp-validation-for="About" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Degree" class="text-dark h5">Degree</label>
                                    <input asp-for="Degree" class="form-control input-default" placeholder="Degree..">
                                    <span asp-validation-for="Degree" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Experience" class="text-dark h5">Experience</label>
                                    <input asp-for="Experience" class="form-control input-default" placeholder="Experience..">
                                    <span asp-validation-for="Experience" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Hobbies" class="text-dark h5">Hobbies</label>
                                    <input asp-for="Hobbies" class="form-control input-default" placeholder="Hobbies..">
                                    <span asp-validation-for="Hobbies" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Faculty" class="text-dark h5">Faculty</label>
                                    <input asp-for="Faculty" class="form-control input-default" placeholder="Faculty..">
                                    <span asp-validation-for="Faculty" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-row">
                                    <div class="col-sm-6">
                                        <label asp-for="Language" class="text-dark h5">Language</label>
                                        <input asp-for="Language" class="form-control input-default" placeholder="Language..">
                                        <span asp-validation-for="Language" class="text-danger font-weight-bold"></span>
                                    </div>
                                    <div class="col-sm-6 mt-2 mt-sm-0">
                                        <label asp-for="TeamLeader" class="text-dark h5">TeamLeader</label>
                                        <input asp-for="TeamLeader" class="form-control input-default" placeholder="TeamLeader..">
                                        <span asp-validation-for="TeamLeader" class="text-danger font-weight-bold"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-sm-6">
                                        <label asp-for="Development" class="text-dark h5">Development</label>
                                        <input asp-for="Development" class="form-control input-default" placeholder="Development..">
                                        <span asp-validation-for="Development" class="text-danger font-weight-bold"></span>
                                    </div>
                                    <div class="col-sm-6 mt-2 mt-sm-0">
                                        <label asp-for="Design" class="text-dark h5">Design</label>
                                        <input asp-for="Design" class="form-control input-default" placeholder="Design..">
                                        <span asp-validation-for="Design" class="text-danger font-weight-bold"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-sm-6">
                                        <label asp-for="Innavation" class="text-dark h5">Innavation</label>
                                        <input asp-for="Innavation" class="form-control input-default" placeholder="Innavation..">
                                        <span asp-validation-for="Innavation" class="text-danger font-weight-bold"></span>
                                    </div>
                                    <div class="col-sm-6 mt-2 mt-sm-0">
                                        <label asp-for="Communication" class="text-dark h5">Communication</label>
                                        <input asp-for="Communication" class="form-control input-default" placeholder="Communication..">
                                        <span asp-validation-for="Communication" class="text-danger font-weight-bold"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email" class="text-dark h5">Email</label>
                                    <input asp-for="Email" class="form-control input-default" placeholder="Email..">
                                    <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PhoneNumber" class="text-dark h5">PhoneNumber</label>
                                    <input asp-for="PhoneNumber" class="form-control input-default" placeholder="PhoneNumber..">
                                    <span asp-validation-for="PhoneNumber" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Skype" class="text-dark h5">Skype</label>
                                    <input asp-for="Skype" class="form-control input-default" placeholder="Skype..">
                                    <span asp-validation-for="Skype" class="text-danger font-weight-bold"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Image" class="text-dark h5">Teacher Image</label>
                                    <input asp-for="Image" class="form-control" accept="image/*">
                                    <span asp-validation-for="Image" class="text-danger font-weight-bold"></span>
                                </div>
                                <button type="submit" class="btn-secondary btn-lg px-4">Submit</button>
                                <a class="btn-dark btn-lg px-4" asp-action="Index">Cancel</a>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
