@using Project.Areas.Admin.Models;
@model CategoryCreateViewModel
<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-6 col-xxl-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Create Category</h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-form">
                            <form class="forms-sample" method="post" asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Name" class="text-dark h5">Category Name</label>
                                    <input asp-for="Name" class="form-control input-default" placeholder="Category..">
                                    <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
                                </div>                              
                                <button type="submit" class="btn-secondary btn-lg px-4">Submit</button>
                                <button class="btn-dark btn-lg px-4" asp-action="Index">Cancel</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                              