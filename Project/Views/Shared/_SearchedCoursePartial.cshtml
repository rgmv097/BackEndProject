@model List<Course>

<ul>
    @foreach (var course in Model)
    {
            <li>
                <a asp-controller="course" asp-action="Details" asp-route-id="@course.Id">               
                  <img style="width:70px;height:70px" src="~/img/course/@course.ImageUrl" />
                <span style="font-weight:bold">@course.Name</span>
                    
                </a>
            </li>
    }
</ul>