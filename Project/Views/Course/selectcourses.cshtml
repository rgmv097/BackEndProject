@model List<Category>
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>courses</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Course Start -->
<div class="course-area pt-150 pb-150">
    <div class="container">

        <div class="row">
            @foreach (var item in Model)
            {
                @foreach (var course in item.Courses)
                {


                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="single-course mb-70">
                            <div class="course-img">
                                <a asp-controller="course" asp-action="details" asp-route-id="@course.Id">
                                    <img src="~/img/course/@course.ImageUrl" alt="course">
                                    <div class="course-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                            </div>
                            <div class="course-content">
                                <h3><a asp-controller="course" asp-action="details" asp-route-id="@course.Id">CSE ENGINEERING</a></h3>
                                <p>@course.Description</p>
                                <a asp-controller="course" asp-action="details" asp-route-id="@course.Id" class="default-btn">read more</a>
                            </div>
                        </div>
                    </div>
                }
            }


        </div>
    </div>
</div>

